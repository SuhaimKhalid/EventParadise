{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*", "listen.ts", "api.ts"],
  "exclude": ["node_modules", "dist", "__test__"]
}
